{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "types": [
            "node"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./out",
        "rootDir": "./"
    },
    "include": [
        "src/**/*",
        "verify_core.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}