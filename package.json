{
  "name": "safeenv",
  "displayName": "SafeEnv (GhostVault)",
  "description": "A local-only secret interception tool. Prevents accidental exposure of API keys.",
  "version": "1.3.0",
  "publisher": "ThaRealJozef",
  "repository": {
    "type": "git",
    "url": "https://github.com/tharealjozef/SafeEnv.git"
  },
  "icon": "media/icon.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Linters"
  ],
  "keywords": [
    "secrets",
    "security",
    "api-keys",
    "aws",
    "stripe",
    "openai",
    "dotenv"
  ],
  "main": "./out/src/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "safeenv-sidebar",
          "title": "GhostVault",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "safeenv-sidebar": [
        {
          "type": "webview",
          "id": "safeenv.controlCenter",
          "name": "Control Center"
        }
      ]
    },
    "commands": [
      {
        "command": "safeenv.scanDocument",
        "title": "SafeEnv: Scan Current Document for Secrets"
      }
    ],
    "configuration": {
      "title": "SafeEnv",
      "properties": {
        "safeenv.enableClipboardSentinel": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the Clipboard Sentinel."
        },
        "safeenv.enableGhostAlerts": {
          "type": "boolean",
          "default": true,
          "description": "Show inline decorations for detected secrets."
        },
        "safeenv.enableScanning": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable secret scanning globally."
        },
        "safeenv.customPatterns": {
          "type": "array",
          "default": [],
          "description": "User-defined regex patterns for secret detection.",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier for the pattern."
              },
              "name": {
                "type": "string",
                "description": "Human-readable name for the pattern."
              },
              "regex": {
                "type": "string",
                "description": "Regular expression pattern to match secrets."
              },
              "provider": {
                "type": "string",
                "description": "Provider name (e.g., 'ACME Corp')."
              },
              "type": {
                "type": "string",
                "description": "Secret type (e.g., 'Internal API Key')."
              },
              "enabled": {
                "type": "boolean",
                "default": true,
                "description": "Whether this pattern is active."
              }
            },
            "required": [
              "id",
              "name",
              "regex",
              "provider",
              "type"
            ]
          }
        },
        "safeenv.allowList": {
          "type": "array",
          "default": [],
          "description": "Literal strings that should never trigger alerts (e.g., test keys).",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy:wasm",
    "copy:wasm": "xcopy /Y /I src\\core\\scanner\\wasm out\\src\\core\\scanner\\wasm\\",
    "build:wasm": "cd src/rust && wasm-pack build --target nodejs --out-dir ../core/scanner/wasm",
    "watch": "tsc -watch -p ./",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@vercel/node": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.8",
    "typescript": "^5.3.3"
  }
}